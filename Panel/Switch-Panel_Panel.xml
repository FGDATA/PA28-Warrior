<?xml version="1.0"?>

<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<PropertyList>

 <name>Switch-Panel Panel</name>
 <background>Aircraft/PA28-Warrior/Panel/transparent-bg.rgb</background>
 <w>174</w>
 <h>40</h>

<instruments>

<instrument>
  <name>panel hotspots</name>
  <x>87</x>
  <y>20</y>
  <w>174</w>
  <h>40</h>
  <w-base>174</w-base>
  <h-base>40</h-base>

 <actions> 


<!--     Switches     -->

   <action>
     <name>toggle nav-lights</name>
     <button>0</button>
     <x>-77</x>
     <y>-20</y>
     <w>12</w>
     <h>40</h>
     <binding>
       <command>nasal</command>
       <script>libraries.nav_light_switch()</script>
     </binding>
   </action>
   
   <action>
     <name>battery switch</name>
     <button>0</button>
     <x>-62</x>
     <y>-20</y>
     <w>12</w>
     <h>40</h>
     <binding>
       <command>nasal</command>
       <script>libraries.battery_switch()</script>
     </binding>
   </action>
   
   <action>
     <name>alternator switch</name>
     <button>0</button>
     <x>-50</x>
     <y>-20</y>
     <w>12</w>
     <h>40</h>
     <binding>
       <command>nasal</command>
       <script>libraries.alternator_switch()</script>
     </binding>
   </action>
   
   <action>
     <name>fuel pump</name>
     <button>0</button>
     <x>-36</x>
     <y>-20</y>
     <w>24</w>
     <h>40</h>
     <binding>
       <command>nasal</command>
       <script>libraries.f_pump_switch()</script>
     </binding>
   </action>

   <action>
     <name>landing lights</name>
     <button>0</button>
     <x>-10</x>
     <y>-20</y>
     <w>24</w>
     <h>40</h>
     <binding>
   <command>nasal</command>
   <script>libraries.landing_light_switch()</script>
     </binding>
   </action>

   <action>
     <name>rotating beacon</name>
     <button>0</button>
     <x>15</x>
     <y>-20</y>
     <w>11</w>
     <h>40</h>
     <binding>
       <command>nasal</command>
       <script>libraries.fin_strobe_light_switch()</script>
     </binding>
   </action>

   <action>
     <name>strobe lights</name>
     <button>0</button>
     <x>26</x>
     <y>-20</y>
     <w>11</w>
     <h>40</h>
     <binding>
       <command>nasal</command>
       <script>libraries.wing_strobe_light_switch()</script>
     </binding>
   </action>

   <action>
     <name>pitot heat</name>
     <button>0</button>
     <x>38</x>
     <y>-20</y>
     <w>24</w>
     <h>40</h>
     <binding>
   <command>nasal</command>
   <script>libraries.pitot_heat_switch()</script>
     </binding>
   </action>

   <action>
     <name>increase panel lights</name>
     <button>0</button>
     <x>64</x>
     <y>-20</y>
     <w>12</w>
     <h>20</h>
     <repeatable>true</repeatable>
     <binding>
      <command>nasal</command>
      <script>libraries.panel_light_switch(1)</script>
     </binding>
   </action>   

   <action>
     <name>decrease panel lights</name>
     <button>0</button>
     <x>64</x>
     <y>0</y>
     <w>12</w>
     <h>20</h>
     <repeatable>true</repeatable>
     <binding>
      <command>nasal</command>
      <script>libraries.panel_light_switch(-1)</script>
     </binding>
   </action>   

  </actions>

 </instrument>

</instruments>

</PropertyList>
