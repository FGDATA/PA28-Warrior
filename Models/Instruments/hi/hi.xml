<?xml version="1.0"?>

<PropertyList>

	<path>hi.ac</path>
	
	<animation>
		<type>scale</type>
		<x-offset>0.95</x-offset>
		<y-offset>0.95</y-offset>
		<z-offset>0.95</z-offset>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>Face</object-name>
		<object-name>Front</object-name>
		<object-name>HdgBug</object-name>
		<emission>
			<red>0.6</red>
			<green>0.6</green>
			<blue>0.6</blue>
			<factor-prop>sim/model/material/instruments/factor</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Face</object-name>
		<property>instrumentation/heading-indicator/indicated-heading-deg</property>
		<factor>-1</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0.00045</y-m>
			<z-m>-0.00027</z-m>
		</center>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>HdgBug</object-name>
		<property>instrumentation/heading-indicator/indicated-heading-deg</property>
		<factor>-1</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0.00045</y-m>
			<z-m>-0.00027</z-m>
		</center>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>HdgBug</object-name>
		<property>it-autoflight/input/hdg</property>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0.00045</y-m>
			<z-m>-0.00027</z-m>
		</center>
	</animation>

	<!-- Heading Bug control -->
	<animation>
		<type>pick</type>
		<object-name>Hdg-Knob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>it-autoflight/input/hdg</property>
				<step>1</step>
				<min>0</min>
				<max>360</max>
				<wrap>1</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>it-autoflight/input/hdg</property>
				<step>-1</step>
				<min>0</min>
				<max>360</max>
				<wrap>1</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>heading-bug</tooltip-id>
				<mapping>heading</mapping>
				<label>Heading Bug: %3d</label>
				<property>it-autoflight/input/hdg</property>
			</binding>
		</hovered>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Hdg-Knob</object-name>
		<property>it-autoflight/input/hdg</property>
		<factor>6</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0.0298</y-m>
			<z-m>-0.02992</z-m>
		</center>
	</animation>

	<!-- Heading Offset -->
	<animation>
		<type>pick</type>
		<object-name>OBS-Knob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/heading-indicator/offset-deg</property>
				<step>1</step>
				<min>0</min>
				<max>360</max>
				<wrap>1</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/heading-indicator/offset-deg</property>
				<step>-1</step>
				<min>0</min>
				<max>360</max>
				<wrap>1</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>heading-bug</tooltip-id>
				<mapping>heading</mapping>
				<label>Offset: %3d</label>
				<property>instrumentation/heading-indicator/offset-deg</property>
			</binding>
		</hovered>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>OBS-Knob</object-name>
		<property>instrumentation/heading-indicator/offset-deg</property>
		<factor>6</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>-0.0298</y-m>
			<z-m>-0.02992</z-m>
		</center>
	</animation>

</PropertyList>
